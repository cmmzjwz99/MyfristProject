<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="8dp"
                android:background="@drawable/bg_line_bottom_1dp"
                android:paddingTop="10dp">

    <LinearLayout
        android:id="@+id/xiapfei"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:paddingBottom="2dp"
            android:paddingRight="3dp"
            android:src="@mipmap/authentication"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="13dp"
            android:text="消费保障"
            android:textColor="@color/green"
            android:textSize="12sp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/approve"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/xiapfei"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:paddingBottom="2dp"
            android:paddingRight="3dp"
            android:src="@mipmap/authentication"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="13dp"
            android:text="龙之游认证"
            android:textColor="@color/green"
            android:textSize="12sp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/approve"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/camp_type_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:paddingBottom="2dp"
            android:paddingRight="3dp"
            android:src="@mipmap/authentication"/>

        <TextView
            android:id="@+id/camp_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="龙之游认证"
            android:textColor="@color/green"
            android:textSize="12sp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/type"
        android:gravity="right"
        android:text="距离"
        android:lines="1"
        android:textColor="@color/black"
        android:textSize="12sp"/>
</RelativeLayout>