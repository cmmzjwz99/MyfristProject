<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <!-- layout background -->
    <item >
        <!-- show rectangle area -->
        <shape android:shape="rectangle" >
            <gradient
                android:angle="90"
                android:startColor="#FFFFFF"
                android:centerColor="@color/gray_666"
                android:endColor="#E3E3E3"/>
        </shape>

    </item>
    <!-- layout foreground -->
    <item
        android:bottom="5px"
        android:top="11px">
        <!-- show rectangle area -->
        <shape android:shape="rectangle" >
            <solid android:color="#FFFFFF" />
        </shape>
    </item>
</layer-list>
