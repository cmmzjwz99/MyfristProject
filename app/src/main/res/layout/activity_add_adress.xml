<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/bg"
              android:orientation="vertical">

    <include layout="@layout/title_bar"></include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_line_bottom_1dp"
        android:gravity="center">

        <EditText
            android:id="@+id/people"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@null"
            android:ellipsize="end"
            android:hint="收件人"
            android:lines="1"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textColorHint="@color/gray_999"
            android:textSize="@dimen/text_normal"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/bg_line_bottom_1dp"
        android:gravity="center">

        <EditText
            android:id="@+id/phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@null"
            android:ellipsize="end"
            android:hint="联系人电话"
            android:inputType="number"
            android:lines="1"
            android:maxLength="11"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textColorHint="@color/gray_999"
            android:textSize="@dimen/text_normal"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/bg_line_bottom_1dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/area"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="所在区域"
            android:textColor="@color/black"
            android:textSize="@dimen/text_normal"/>

        <TextView
            android:id="@+id/choose_area"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:layout_toRightOf="@+id/area"
            android:button="@null"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:hint="请选择区域"
            android:lines="1"
            android:textColor="@color/black"
            android:textColorHint="@color/gray_999"
            android:textSize="@dimen/text_normal"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/bg_line_bottom_1dp"
        android:gravity="center">

        <EditText
            android:id="@+id/address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@null"
            android:ellipsize="end"
            android:hint="详细地址"
            android:lines="1"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textColorHint="@color/gray_999"
            android:textSize="@dimen/text_normal"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/white"
        android:gravity="center">

        <CheckBox
            android:id="@+id/default_address"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:button="@drawable/selector_check_box"
            android:checked="false"
            android:text="  设为默认地址"
            android:textColor="@color/gray_666"
            android:textColorHint="@color/gray_999"
            android:textSize="14sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="20dp">

        <Button
            android:id="@+id/sure"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="#F74D39"
            android:text="确 认"
            android:textColor="@color/white"
            android:textSize="@dimen/text_tittle"/>
    </LinearLayout>


    <Button
        android:id="@+id/cancel"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:background="#E5E0DA"
        android:text="取 消"
        android:textColor="@color/black"
        android:textSize="@dimen/text_tittle"/>

</LinearLayout>